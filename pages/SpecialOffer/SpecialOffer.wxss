/* pages/SpecialOffer/SpecialOffer.wxss */
.SpecialOffer_container {
  background: #fee4ea;
  min-height: 100vh;
  width: 100vw;
}

.SpecialOffer_container_img {
  height: 300rpx;
  width: 100vw;
}

.flex_between {
  justify-content: center;
}

.SpecialOffer_card {
  background: #ffffff;
  box-shadow: 0rpx 5rpx 14rpx 1rpx rgba(137, 137, 137, 0.5);
  border-radius: 10rpx;
  width: 337rpx;
  height: 442rpx;
  margin: auto;
}

.SpecialOffer_card_img {
  width: 100%;
  height: 232rpx;
}

.text_center {
  text-align: center;
}

.SpecialOffer_card_title {
  text-align: center;
  color: #784242;
  font-size: 28rpx;
  line-height: 40rpx;
}

.SpecialOffer_card_price {
  color: #ee181b;
  font-size: 24rpx;

}

.SpecialOffer_card_num {
  color: #784242;
  font-size: 24rpx;
}

.SpecialOffer_card_price_box {
  padding: 0 20rpx;

}

.color_red {
  color: #ee181b;
}

.padding_10 {
  padding: 0 10px;
}

.SpecialOffer_card_desc {
  line-height: 40rpx;
}

.SpecialOffer_btn {
  width: 232rpx;
  height: 59rpx;
  line-height: 59rpx;
  color: #ffffff;
  background-image: linear-gradient(0deg,
      #fd201f 0%,
      #ff5a5a 100%);
  margin-top: 20px;
  font-size: 24rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(220, 30, 21, 0.25);
}
.SpecialOffer_card_item{
  margin-top: 20rpx;
}